<Window x:Class="GBPemu.GameBoyPrinterEmulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GBPemu"
        mc:Ignorable="d"
        Title="RetroSpy - GameBoy Printer Emulator" SizeToContent="WidthAndHeight"  Closing="Window_Closing" ResizeMode="CanMinimize">
    <Grid x:Name="GameBoyPrinterEmulatorWindowGrid" Height="432" Width="480">
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Save As..." Click="SaveAs_Click" />
                <Separator/>
                <MenuItem Header="Use DMG Color Palette" Click="DMGPaletteEnabled_Click" IsChecked="{Binding DMGPaletteEnabled}"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>
